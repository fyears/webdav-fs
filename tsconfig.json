{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        // "noImplicitAny": true,
        "moduleResolution": "node",
    },
    "types": [
        "@types/node"
    ],
    "include": [
        "./source/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}
